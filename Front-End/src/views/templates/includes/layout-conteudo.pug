doctype html
html(lang="pt-BR")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title teste layout conteudo
        link(rel="stylesheet", href="../assets/styles-pug/layout-conteudo.css")
    body  
        header 
            img(src="../assets/imgs-pug/oasis-01.png", alt="", srcset="").img-header-left
            h2= conteudo.titulo
            div.div-img-header
                img(src="../assets/imgs-pug/config.png", alt="", srcset="").img-header-right
        section 
            div.section-div-p
                    p= conteudo.descricao                 
            // Botão para ir para o próximo conteúdo
            button(onclick="carregarProximoConteudo()") Próximo Conteúdo

            // Botão para ir para o conteúdo anterior
            button(onclick="carregarConteudoAnterior()") Conteúdo Anterior
        // Inicializa a variável id_conteudo
        script.
            let idConteudo = !{id_conteudo}; // Passa o valor do ID do backend para o JavaScript

        // Incluindo o script
        script(src="/assets/scripts-pug/teste.js")